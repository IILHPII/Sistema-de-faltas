package configuration;

import java.sql.*;


public class Conexion {
		
		static boolean confirmacion;
		private String url="jdbc:mysql//localhost/registro";
		private String userDB="root";
		private String passwordDB="Hernandez430785!";
		Connection conn=null;
		
		public Conexion() {
			try {
				Class.forName("com.mysql.cj.jdbc.Driver");
				conn=DriverManager.getConnection(url,userDB,passwordDB);
				if(conn!=null) {
					System.out.println("Connectin database ["+conn+"] OK");
				}
			}catch(SQLException ex) {
				System.out.println("Exception conexion: "+ex.getMessage());
			}catch(ClassNotFoundException ex) {
				System.out.println("Exception driver: "+ex.getMessage());
			}
		}
		
		public static Connection getConnection() {
			return conn;
		}
		
		public static void main() {
			getConnection();
		}
		
		
		


								
}
